RESEND_API_KEY=re_your_actual_resend_api_key_here
RESEND_FROM_EMAIL=noreply@familyreliefproject7.org
RESEND_TO_EMAIL=contact@familyreliefproject7.org
RESEND_TO_EMAILS=contact@familyreliefproject7.org,admin@familyreliefproject7.org
RESEND_CC_EMAILS=haitianfamilyrelief@gmail.com,w.regis@comcast.net
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
CONTACT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/CONTACT/WEBHOOK

# --- Stripe (Local Development - Test Mode) ---
# Ensure keys are in TEST mode for local dev
NEXT_PUBLIC_STRIPE_TEST_MODE=true
NEXT_PUBLIC_SITE_URL=http://localhost:3005
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Webhook secret used for local testing (from Stripe Dashboard → Developers → Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret_here

# Optional: separate webhook secrets per mode; manager picks based on publishable key
STRIPE_WEBHOOK_SECRET_TEST=
STRIPE_WEBHOOK_SECRET_LIVE=

# Local dev port (package.json also sets -p 3005)
PORT=3005

# --- Optional local-only diagnostics ---
# Log expected HMACs for signature troubleshooting
WEBHOOK_DEBUG_SIGNATURE=true

# Admin health endpoint token (for /api/stripe/webhook/health)
ADMIN_HEALTH_TOKEN=dev-admin-health-token
